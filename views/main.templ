package views

import (
	"go-fiber/internal/vacancy"
	"go-fiber/views/layout"
	"go-fiber/views/widgets"
)

templ Main(vacancies []vacancy.Vacancy, pagesCount, currentPage int) {
	@layout.Layout(layout.LayoutProps{
		Title:           "Найди работу мечты",
		MetaDescription: "Сайт по поиску работы мечты",
	}) {
		<main>
			@mainCSS()
			@layout.Header()
			@widgets.VacancyWidget(vacancies, pagesCount, currentPage)
			@widgets.VacancyForm()
		</main>
	}
}

templ mainCSS() {
}
